<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/backLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:clickable="true"></RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        app:cardBackgroundColor="#FFF"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_advertising_layout"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="myname"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bold_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:padding="0dp" >

                        <TextView
                            android:id="@+id/txtOrderNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/title"
                            android:layout_margin="0dp"
                            android:gravity="center_vertical|right"
                            android:paddingBottom="0dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="8dp"
                            android:paddingTop="0dp"
                            android:text="mycontect value "
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/title"
                            android:layout_margin="0dp"
                            android:gravity="center_vertical|right"
                            android:padding="0dp"
                            android:text="@string/orderpicker"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/normal_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtNumberDone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/title"
                            android:gravity="center_vertical|right"
                            android:text="mycontect value "
                            android:paddingRight="8dp"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/txtDone"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/title"
                            android:gravity="center_vertical|right"
                            android:text="@string/coinDeal"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/normal_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/title"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="8dp"
                            android:text="date"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/normal_text"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingRight="4dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/title"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="8dp"
                            android:text="date"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/normal_text"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:minWidth="120dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageChannel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_launcher"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>