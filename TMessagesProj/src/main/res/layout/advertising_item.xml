<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/advertisingLayoutSliding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="160dp"
            android:background="@drawable/border_advertising_layout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="myname"
                        android:id="@+id/textTitleAdv"
                        android:singleLine="true"
                        android:layout_margin="5dp"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="@dimen/bold_text"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="توضیحات"
                        android:textSize="@dimen/normal_text"
                        android:textColor="@color/light_gray"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textTitleAdv"
                        android:id="@+id/textDescription"
                        android:gravity="right"

                        />

                    <LinearLayout
                        android:id="@+id/reportLayout"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="30dp"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtReport"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/border_more_button"
                            android:gravity="center"
                            android:text="@string/reportMessage"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/hint" />
                    </LinearLayout>

                    <ImageButton android:layout_width="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/stack"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_height="30dp"
                        android:id="@+id/imgOptionAdv" />


                </RelativeLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="160dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgChannalAdv"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textPriceAdver"
                            android:gravity="fill_vertical|end|right"
                            android:textColor="@color/light_gray"
                            android:layout_weight="1"
                            android:text="1"
                            android:paddingRight="2dp"
                            android:textSize="@dimen/bold_text"
                            android:singleLine="false"
                            android:textIsSelectable="false" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:id="@+id/imgIconprice"
                            android:src="@drawable/coin_gray"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="8dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/laySubmitAdv">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/newspaper" />

                <TextView
                    android:id="@+id/flytingKindText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/adverSubmit"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/fontPrice"
                    android:textSize="@dimen/bold_text"
                    android:paddingLeft="4dp"
                    android:paddingRight="12dp"
                    android:gravity="left|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/layConnectAdv">

                <TextView
                    android:id="@+id/flytingTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/connectToMember"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/bold_text"
                    android:textColor="@color/fontPrice"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/telegram" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>