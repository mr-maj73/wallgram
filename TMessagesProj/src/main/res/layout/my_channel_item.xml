<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        app:cardBackgroundColor="#FFF"
                                        app:cardElevation="5dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_height="150dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="100dp"

            >
                <RelativeLayout android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:layout_height="match_parent">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="myname"
                              android:id="@+id/title"
                              android:singleLine="true"
                              android:layout_margin="5dp"
                              android:gravity="right"
                              android:textColor="@color/black"
                              android:textSize="@dimen/bold_text"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentRight="true"
                    />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="mycontect value mycontect value mycontect value mycontect value mycontect value"
                              android:textSize="@dimen/normal_text"
                              android:textColor="@color/light_gray"
                              android:layout_marginTop="5dp"
                              android:layout_marginBottom="5dp"
                              android:layout_alignParentRight="true"
                              android:layout_below="@id/title"
                              android:lines="2"
                              android:id="@+id/name"
                              android:gravity="right"

                    />
                    <ImageButton android:layout_width="30dp"
                                 android:layout_alignParentLeft="true"
                                 android:layout_alignParentTop="true"
                                 android:src="@drawable/stack"
                                 android:scaleType="fitXY"
                                 android:background="@null"
                                 android:layout_height="30dp"/>


                </RelativeLayout>

                <ImageView android:layout_width="100dp" android:layout_height="100dp"
                           android:id="@+id/image"
                           android:background="@drawable/ic_launcher"
                           android:scaleType="centerCrop"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@color/gray_divider"
                          android:layout_alignParentBottom="true"
            ></LinearLayout>
            <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"

            >
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="درج آگهی"
                          android:textSize="@dimen/bold_text"
                          android:textColor="@color/colorPrimary"
                          android:layout_centerVertical="true"
                          android:background="@null"
                          android:id="@+id/reserve"
                        android:drawableLeft="@drawable/newspaper"


                />
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="سفارش عضویت"
                        android:id="@+id/delete"
                        android:drawableRight="@drawable/join"
                        android:background="@null"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/bold_text"
                />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>